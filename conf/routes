# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                                       controllers.HomeController.index
GET     /productArgs                            controllers.HomeController.product(prodType, prodNum: Int)
GET     /product/:prodType/:prodNum             controllers.HomeController.product(prodType, prodNum: Int)
GET     /productRE/$prodType<[a-z]{2}\d\d>/:prodNum         controllers.HomeController.product(prodType, prodNum: Int)
GET     /random                                 controllers.HomeController.randomNumber
GET     /randomString/:length                   controllers.HomeController.randomString(length: Int)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                           controllers.Assets.versioned(file)

GET     /taskList                               controllers.TaskListController.taskList
GET     /loginOne                               controllers.TaskListController.login
GET     /validateGetOne                         controllers.TaskListController.validateLoginGet(username, password)
POST    /validatePostOne                        controllers.TaskListController.validateLoginPost
POST    /createUserFormOne                      controllers.TaskListController.createUserForm
POST    /createUserOne                          controllers.TaskListController.createUser
POST    /addTaskOne                             controllers.TaskListController.addTask
POST    /deleteTaskOne                          controllers.TaskListController.deleteTask

GET     /logoutOne                              controllers.TaskListController.logout